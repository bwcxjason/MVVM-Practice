<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="countDownViewModel"
            type="com.example.jason.mvvm_practice.common.component.countdown.CountDownViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="获取验证码"
            android:text="@={countDownViewModel.text}"
            android:onClick="@{() -> countDownViewModel.start()}"/>

    </LinearLayout>

</layout>
