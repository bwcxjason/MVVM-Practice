<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".business.articles.activity.ArticlesActivity">

    <data>

        <import type="android.view.View"/>

        <variable
            name="articlesViewModel"
            type="com.example.jason.mvvm_practice.business.articles.viewmodel.ArticlesViewModel" />
    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:onLoadMoreCommand="@{articlesViewModel.loadMore}"
        app:onRefreshCommand="@{articlesViewModel.refresh}">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ListView
                android:id="@+id/articles"
                bindItems="@{articlesViewModel.articles}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</layout>